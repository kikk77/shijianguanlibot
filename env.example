# 多租户Telegram机器人系统 - 环境配置

# 应用配置
NODE_ENV=production
PORT=3000

# 数据库配置
DB_PATH=./data

# 官方机器人配置（必需）
OFFICIAL_BOT_TOKEN=your_official_bot_token_here
OFFICIAL_BOT_USERNAME=your_official_bot_username

# Railway部署配置
RAILWAY_VOLUME_MOUNT_PATH=/app/data

# 可选：日志配置
LOG_LEVEL=info
DEBUG=false

# 可选：系统限制
MAX_USERS=1000
MAX_PROVIDERS_PER_USER=10

# 可选：Telegram API配置
TELEGRAM_API_URL=https://api.telegram.org 